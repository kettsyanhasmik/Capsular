<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Capsular" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/maincolor</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.Capsular" parent="Base.Theme.Capsular" />

    <style name="LightButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/light_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">20dp</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="OtpEditTextStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLength">1</item>
    </style>



    <style name="TealButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/maincolor</item>
    </style>

    <style name="TealDatePickerDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">@color/maincolor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/maincolor</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColorPrimary">@color/maincolor</item>
        <item name="textColorAlertDialogListItem">@color/maincolor</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/TealDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/TealDialogButton</item>
    </style>

    <style name="TealDialogButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/maincolor</item>
    </style>




</resources>